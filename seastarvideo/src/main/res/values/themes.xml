<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SeaStarVideoDemo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SeaStarVideoDemo" parent="Base.Theme.SeaStarVideoDemo" />

    <style name="Theme_Custom_Dialog" parent="Theme.AppCompat.Dialog">
        <!-- 对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 标题 -->
        <item name="windowNoTitle">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 背景透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- 进出场动画 -->
        <item name="android:windowAnimationStyle">@style/normalDialogAnim</item>
        <!-- 背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="normalDialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <!--  输入框的通用样式  -->
    <style name="edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="stateRadius">@dimen/dp_4</item>
        <item name="normalBackgroundColor">@color/gray_f7f8fa</item>
        <item name="focusBackgroundColor">@color/gray_f7f8fa</item>
        <item name="pressedBackgroundColor">@color/gray_f7f8fa</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/sp_15</item>
        <item name="android:textColor">@color/textColor_333333</item>
        <item name="android:textColorHint">@color/textColor_999999</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
    </style>

    <!--  大按钮的通用样式  -->
    <style name="bigBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_44</item>
        <item name="stateRadius">@dimen/dp_4</item>
        <item name="normalBackgroundColor">@color/dominant_tone_blue</item>
        <item name="pressedBackgroundColor">@color/light_blue_99afe1</item>
        <item name="focusBackgroundColor">@color/light_blue_99afe1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>
</resources>