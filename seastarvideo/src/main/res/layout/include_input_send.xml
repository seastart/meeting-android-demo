<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.freewind.seastarvideo.ui.StateEditText
        android:id="@+id/inputSet"
        android:layout_width="@dimen/dp_0"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:hint="@string/say_something"
        android:textColorHint="@color/textColor_999999"
        android:textColor="@color/textColor_333333"
        android:textSize="@dimen/sp_13"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_10"
        app:normalBackgroundColor="@color/gray_f7f8fa"
        app:pressedBackgroundColor="@color/gray_f7f8fa"
        app:focusBackgroundColor="@color/gray_f7f8fa"
        app:stateRadius="@dimen/dp_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sendStv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_10"/>

    <com.freewind.seastarvideo.ui.StateTextView
        android:id="@+id/sendStv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_28"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/send"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/white"
        android:gravity="center"
        app:stateRadius="@dimen/dp_14"
        app:normalBackgroundColor="@color/dominant_tone_blue"
        app:focusBackgroundColor="@color/light_blue_99afe1"
        app:pressedBackgroundColor="@color/light_blue_99afe1"
        app:layout_constraintStart_toEndOf="@id/inputSet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/dp_16"/>

</androidx.constraintlayout.widget.ConstraintLayout>