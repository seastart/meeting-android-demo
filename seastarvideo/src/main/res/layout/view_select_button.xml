<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectBtnCl">

    <TextView
        android:id="@+id/textTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_with_pwd"
        android:textSize="@dimen/sp_18"
        android:textColor="@drawable/selector_text_color_blue_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/flagV"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_3"
        android:background="@drawable/shape_select_flag"
        app:layout_constraintStart_toStartOf="@id/textTv"
        app:layout_constraintEnd_toEndOf="@id/textTv"
        app:layout_constraintTop_toBottomOf="@id/textTv"
        android:layout_marginTop="@dimen/dp_9"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>