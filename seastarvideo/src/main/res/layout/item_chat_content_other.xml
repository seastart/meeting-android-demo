<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/avatarIv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:src="@mipmap/avatar_woman"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"/>

    <TextView
        android:id="@+id/nickNameTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="何萌"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/textColor_999999"
        app:layout_constraintStart_toEndOf="@id/avatarIv"
        app:layout_constraintTop_toTopOf="@id/avatarIv"
        android:layout_marginStart="@dimen/dp_6" />
    
    <TextView
        android:id="@+id/contentTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是一段会议详情内容文案这是一段会议详情内容文案这是一段会议详情内容文案这是一段会议详情内容文案这是一段会议详情内容文案"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/textColor_333333"
        android:background="@drawable/shape_bg_white_radius_4"
        android:padding="@dimen/dp_10"
        app:layout_constraintStart_toStartOf="@id/nickNameTv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nickNameTv"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginEnd="@dimen/dp_64"/>

</androidx.constraintlayout.widget.ConstraintLayout>