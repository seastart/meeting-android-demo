<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_128"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shape_bg_white_radius_4">

    <ImageView
        android:id="@+id/roomImageIv"
        android:layout_width="@dimen/dp_181"
        android:layout_height="@dimen/dp_104"
        android:src="@mipmap/image_meeting_room"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/dp_12"/>

    <TextView
        android:id="@+id/roomTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_title_meeting"
        android:textColor="@color/textColor_333333"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@id/roomImageIv"
        app:layout_constraintTop_toTopOf="@id/roomImageIv"
        app:layout_constraintBottom_toTopOf="@id/roomDesTv"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_2_5"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:id="@+id/roomDesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/room_des_meeting"
        android:textSize="@dimen/sp_12"
        app:layout_constraintStart_toStartOf="@id/roomTitleTv"
        app:layout_constraintTop_toBottomOf="@id/roomTitleTv"
        app:layout_constraintBottom_toBottomOf="@id/roomImageIv"
        android:layout_marginTop="@dimen/dp_2_5"
        app:layout_constraintVertical_chainStyle="packed"/>

</androidx.constraintlayout.widget.ConstraintLayout>